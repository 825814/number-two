

<div>
  <% if @question.answered_by?(current_user) %>

  <div>
    <%= form_with(model: [@question, @answer], url: question_answers_path(@question), method: :delete) do |f| %>
    <p><%= @question.question %></p>
    <div>
      <%= f.label :choice_id, class: 'form_item_label' %>
      <%- Choice.all.each do |choice| %>
        <label><%= f.radio_button(:choice_id, choice.id) %><%= choice.choice %></label>
      <%- end %>
    </div>
    <div>
      <%= f.label :comment, "理由" %><br>
      <%= f.text_area :comment %>
    </div>
    <%= f.hidden_field :question_id, value: @question.id %>
    <%= f.submit %>
    <% end %>
  </div>

  <% else %>
  <%= form_with(model: [@question, @answer], url: question_answers_path(@question), method: :post) do |f| %>
  <%#= form_with(model: [@question, @answer], url: confirm_path, method: :post) do |f| %>

  <div>
    <p><%= @question.question %></p>
    <div>
      <%= f.label :choice_id, class: 'form_item_label' %>
      <%- Choice.all.each do |choice| %>
        <label><%= f.radio_button(:choice_id, choice.id) %><%= choice.choice %></label>
      <%- end %>
    </div>
    <div>
      <%= f.label :comment, "理由" %><br>
      <%= f.text_area :comment %>
    </div>
  </div>

      <%#= f.hidden_field :choice_id, value: @choice.id %>
      <%= f.hidden_field :question_id, value: @question.id %>
      <%= f.submit %>

  <% end %>
  <% end %>
</div>



