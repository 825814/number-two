<p id="notice"></p>
<div class="container">

  <div class="row mb-3">
    <h5 class="bg-light text-dark offset-md-3 mt-5">新規登録</h5>
  </div>

  <%= form_with model: @user, url: user_registration_path do |f| %>
  <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class= "row mb-3">
      <%= f.label :名前, class: "col-md-3 offset-md-3 col-form-label" %>
      <div class="col-md-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "五十嵐郁未", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :メールアドレス, class: "col-md-3 offset-md-3 col-form-label" %>
      <div class="col-md-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 offset-md-3">
        <%= f.label :パスワード, class: "col-form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :"パスワード(確認用)", class: "col-md-3 offset-md-3 col-form-label" %>
      <div class="col-md-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 offset-md-6">
      <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <%#= render "public/shared/links" %>
</div>
